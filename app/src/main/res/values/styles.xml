<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="icon">
        <item name="android:layout_width">@dimen/size_small_24</item>
        <item name="android:layout_height">@dimen/size_small_24</item>
    </style>
    <style name="icon.left" parent="icon">
        <item name="android:layout_gravity">top|left</item>
        <item name="android:layout_marginTop">@dimen/spacing_small_24</item>
        <item name="android:layout_marginLeft">@dimen/spacing_small_16</item>
    </style>
    <style name="icon.right" parent="icon">
        <item name="android:layout_gravity">top|right</item>
        <item name="android:layout_marginTop">@dimen/spacing_small_24</item>
        <item name="android:layout_marginRight">@dimen/spacing_small_16</item>
    </style>
    <style name="head">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">28dp</item>
        <item name="android:layout_marginBottom">28dp</item>
    </style>
    <style name="line">
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:background">@color/grey_light</item>
    </style>
    <style name="text_head">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="text_head_small" parent="text_head">
        <item name="android:textSize">14dp</item>
    </style>
    <style name="text_head_big" parent="text_head">
        <item name="android:textSize">26dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>
</resources>
